<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_view_card_view"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    app:cardCornerRadius="30dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_grid_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:layout_margin="1dp"
        app:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/image_grid_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/art_wallpaper"
        android:scaleType="centerCrop"
        android:elevation="5dp"
        />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/grid_item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italian"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/grid_item_subheader"
        android:layout_marginTop="-5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short eats"
        android:textColor="#474747"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>